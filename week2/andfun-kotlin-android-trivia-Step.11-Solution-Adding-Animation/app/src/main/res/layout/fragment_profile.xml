<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.navigation.AboutFragment">

    <ImageView
        android:id="@+id/personal_avatar"
        android:layout_width="335dp"
        android:layout_height="331dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_11" />

    <TextView
        android:id="@+id/item_one_text"
        style="@style/itemStyle"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/item_one_text"
        app:layout_constraintEnd_toStartOf="@+id/item_two_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/personal_avatar"
        app:layout_constraintTop_toBottomOf="@+id/personal_avatar" />

    <TextView
        android:id="@+id/item_two_text"
        style="@style/itemStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/item_two_text"
        app:layout_constraintEnd_toEndOf="@+id/personal_avatar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_one_text"
        app:layout_constraintTop_toBottomOf="@+id/personal_avatar" />

    <TextView
        android:id="@+id/item_content_one_text"
        style="@style/itemContentStyle"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/item_content_one_text"
        app:layout_constraintEnd_toStartOf="@+id/item_content_two_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/personal_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_one_text" />

    <TextView
        android:id="@+id/item_content_two_text"
        style="@style/itemContentStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/item_content_two_text"
        app:layout_constraintEnd_toEndOf="@+id/personal_avatar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_content_one_text"
        app:layout_constraintTop_toBottomOf="@+id/item_two_text" />

    <TextView
        android:id="@+id/item_tree_text"
        style="@style/itemStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/item_tree_text"
        app:layout_constraintEnd_toEndOf="@+id/personal_avatar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personal_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_content_one_text" />

    <TextView
        android:id="@+id/item_content_tree_text"
        style="@style/itemContentStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/item_content_tree_text"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personal_avatar"
        app:layout_constraintStart_toStartOf="@+id/personal_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_tree_text" />
</androidx.constraintlayout.widget.ConstraintLayout>